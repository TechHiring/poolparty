#hero
  background: $primary
  text-align: center
  padding: 50px
  color: white
  margin: 50px 0
  border-top: 1px solid #333
  border-bottom: 1px solid #333

  h1
    color: white
    padding: 10px
    border: 5px solid white
    width: 300px
    margin: 0 auto

  p
    margin: 50px auto
    font-style: italic


body.alert
  background: whitesmoke

  .box
    max-width: 600px
    margin: 50px auto
    background: white
    border: 1px solid #ccc
    box-shadow: 0 0 1px #aaa

    .header
      padding: 10px 20px
      background: #f7f7f7

    .body
      padding: 20px
    p
      line-height: 1.5
