<!DOCTYPE html>
<html>
  <head>
    <title>party</title>
    <link rel='stylesheet' href='/style.css' />
  </head>
  <body ng-app="party" ng-controller="root">

    <!-- topbar -->
    <div id="topbar">
      <div class="flr">
        <a ng-href="#/users/{{currentUser.id}}">me</a>
        <a href="/logout">logout</a>
      </div>
      <b>poolparty</b>
    </div>

    <!-- roster -->
    <div id="roster">
      <div ng-repeat="user in roster" class="media">
        <div class="img">
          <img ng-src="{{user.avatar_url}}">
        </div>
        <div class="bd">
          {{user.username}}
        </div>
      </div>
    </div>

    <!-- chat -->
    <div id="chat">
      <div ng-repeat="chat in chats">
        <b>{{chat.user.username}}:</b> {{chat.message}}
      </div>
      <form ng-submit="say()">
        <input type="text" ng-model="chat">
      </form>
    </div>

    <div ng-view></div>


    <!-- libs -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.js"></script>
    <script src="//connect.soundcloud.com/sdk.js"></script>

    <script>
      SC.initialize({
        client_id: 'a363a0f2b20a24d72e93f9d02b703830',
        redirect_uri: 'http://localhost:9000/'
      });
      SC.accessToken('<%- token %>');
      window.USER = <%- JSON.stringify(user) %>;
    </script>

    <script src="/party.js"></script>

  </body>
</html>
